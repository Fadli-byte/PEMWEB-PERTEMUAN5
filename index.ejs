<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Pengguna</title>
</head>
<body>
    <h1>Daftar Pengguna</h1>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Nama</th>   
            <th>Email</th>
            <th>Telephone</th>
            <th>Aksi</th>
        </tr>
        <% users.forEach(pengguna => { %>
        <tr>
            <td><%= pengguna.id %></td>
            <td><%= pengguna.name %></td>
            <td><%= pengguna.email %></td>
            <td><%= pengguna.phone %></td>
            <td>
                <a href="/edit/<%= pengguna.id %>">Edit</a> |
                <a href="/delete/<%= pengguna.id %>">Hapus</a>
            </td>
        </tr>
        <% }) %>
    </table>

    <h2>Tambah Pengguna Baru</h2>
    <form action="/add" method="post">
    <label for="name">Name:</label>
    <input type="text" id="name" nama="name" required><br>
    <label for="email">Email:</label>
    <input type="email" nama="email" id="email"><br>
    <label for="phone">Telepon:</label>
    <input type="text" nama="phone" id="phone"><br>
    <button type="submit">Tambah </button>



</form>


</body>
</html>
